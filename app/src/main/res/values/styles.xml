<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="PopUpMenu" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorBlack</item>
        <item name="android:colorControlHighlight">@color/colorDarkSilver</item>
    </style>
    
    <style name="LightThemeDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="textColorAlertDialogListItem">@android:color/black</item>
    </style>

    <style name="DarkThemeDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--LIGHT THEME-->
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="textColor">#000000</item>
        <item name="metaTextColor">#606060</item>
        <item name="bgColor">#ffffff</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/colorWhite</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="fontFamily">@font/cairo_semi_bold</item>
    </style>

    <!--DARK THEME-->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="textColor">#ffffff</item>
        <item name="metaTextColor">#aeaeae</item>
        <item name="bgColor">@color/colorBlack</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/colorBlack</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="fontFamily">@font/cairo_semi_bold</item>
    </style>

    <style name="MyDarkMenu" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:actionModeBackground">@color/colorBlack</item>
    </style>

    <style name="MyTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorDarkSilver</item>
        <item name="selectableItemBackground">@color/colorDarkSilver</item>
    </style>

    <style name="TextAppearance.MyApp.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="CollapsedExpandedTitleText" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.MyApp.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MyRipple">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="ChipTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
